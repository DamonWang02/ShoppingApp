<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textviewLoginTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Shopping"
            android:textAllCaps="false"
            android:textColor="	#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingBottom="20dp"/>

        <EditText
            android:id="@+id/edittextLoginEditPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewLoginTitle"
            android:background="@drawable/bg_btn3"
            android:paddingTop="10dp"
            android:drawablePadding="1dp"
            android:hint="手机号码" />

        <EditText
            android:id="@+id/edittextLoginEditPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittextLoginEditPhone"
            android:background="@drawable/bg_btn3"
            android:inputType="textPassword"
            android:paddingTop="10dp"
            android:hint="密码" />

        <Button
            android:id="@+id/buttonLoginEnterSystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittextLoginEditPassword"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/enter" />

        <Button
            android:id="@+id/buttonLoginRegisterUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edittextLoginEditPassword"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/buttonLoginEnterSystem"
            android:background="@drawable/user" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>